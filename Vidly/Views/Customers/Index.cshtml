@model Vidly.Models.Customer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of customers</h2>

@{
    if (Model.Customers.Count==0)
    {
        <h2> We don't currently have customers, please contact support</h2>
    }
    else
    {
        <table class="table table-hover table-striped">
           <thead>
               <tr>
                   <th>Name</th>
               </tr>
           </thead> 
            <tbody>
                @foreach (var customer in Model.Customers)
                 {
                    <tr>
                        <td> @Html.ActionLink(customer.Name,"Customer","Customers",new{id=1},null)</td>
                    </tr>
                 }
            </tbody>
           
        </table>
        
    }
 }
